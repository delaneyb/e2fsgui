{
  "name": "e2fs-gui",
  "version": "1.0.1",
  "description": "Simple Electron GUI for browsing ext2/3/4 Linux disks on macOS using e2fsprogs",
  "main": "main.js",
  "productName": "LinuxDiskBrowser",
  "config": {
    "forge": "forge.config.js"
  },
  "scripts": {
    "start": "electron-forge start",
    "start-sudo": "sudo electron-forge start",
    "make": "electron-forge make",
    "package": "electron-forge make --platform=darwin",
    "publish": "electron-forge publish",
    "version": "standard-version",
    "postversion": "git push --follow-tags && npm run make && npm run publish"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/electron": "latest",
    "electron": "^29.0.0",
    "electron-reloader": "^1.2.3",
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-dmg": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "electron-osx-sign": "^0.5.0",
    "standard-version": "^9.5.0",
    "@electron-forge/publisher-github": "^7.2.0"
  }
}
